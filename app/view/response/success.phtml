$hour = (int) date('H');

/** 
 * Светлая
 */

if ($hour >= 6 && $hour < 8) {
  $light_time = "sunrise";
} elseif ($hour >= 8 && $hour < 11) {
  $light_time = "late-morning";
} elseif ($hour >= 11 && $hour < 14) {
  $light_time = "midday";
} elseif ($hour >= 13 && $hour < 18) {
  $light_time = "afternoon";
} elseif ($hour >= 18 && $hour < 22) {
  $light_time = "evening";
} else {
  // $light_time = "night";
  $light_time = "evening";
}

/**
 * Тёмная
 */

if ($hour >= 6 && $hour < 12) {
  $dark_time = "Sunrise";
} elseif ($hour >= 12 && $hour < 16) {
  $dark_time = "Day";
} elseif ($hour >= 16 && $hour < 18) {
  $dark_time = "Evening";
} elseif ($hour >= 18 && $hour < 22) {
  $dark_time = "Twilight";
} else {
  $dark_time = "Night";
}
